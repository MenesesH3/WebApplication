@model Pager

<div class="container btn-group" style=" border-radius: 12px; height:45px;">
	<div class="col-4 p-0 justify-content-end mt-1">
		<form asp-controller="@Model.Controller" asp-action="@Model.Action">
			<span class="btn-group">
				<input class="form-control" type="text" name="SearchText"
					   value="@Model.SearchText" placeholder="Pesquisar">
				<input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Buscar" />
			</span>
		</form>
	</div>

	<div class="container mt-1">
		<ul class="pagination justify-content-end">

			@if (Model.CurrentPage > 1)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="1">Primeiro</a>
				</li>
				<li>
					<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
					   asp-route-pg="@(Model.CurrentPage - 1)">&lt&lt</a>
				</li>
			}
			@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
			{
				<li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
					<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@pge"> @pge </a>
				</li>

			}
			@if (Model.CurrentPage < Model.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
					   asp-route-pg="@(Model.CurrentPage + 1)">>></a>
				</li>
				<li>
					<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
					   asp-route-pg="@(Model.TotalPages)">Último</a>
				</li>
			}
		</ul>
	</div>

</div>